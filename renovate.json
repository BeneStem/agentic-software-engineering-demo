{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":prHourlyLimitNone"
  ],
  "enabledManagers": [
    "gradle",
    "npm"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "gradle"
      ],
      "matchPackagePatterns": [
        "*"
      ],
      "groupName": "gradle dependencies"
    },
    {
      "matchManagers": [
        "npm"
      ],
      "matchPackagePatterns": [
        "*"
      ],
      "groupName": "npm dependencies"
    }
  ]
}
